{
  "description": "The state machine configuration for the chimerapy pipeline manager.",
  "states": {
    "INITIALIZED": {
      "name": "INITIALIZED",
      "valid_transitions": [
        {
          "name": "SHUTDOWN",
          "from_state": "INITIALIZED",
          "to_state": "SHUTDOWN"
        },
        {
          "name": "COMMIT",
          "from_state": "INITIALIZED",
          "to_state": "COMMITTED"
        }
      ],
      "description": "The manager was initialized."
    },
    "COMMITTED": {
      "name": "COMMITTED",
      "valid_transitions": [
        {
          "name": "SHUTDOWN",
          "from_state": "COMMITTED",
          "to_state": "SHUTDOWN"
        },
        {
          "name": "RESET",
          "from_state": "COMMITTED",
          "to_state": "INITIALIZED"
        },
        {
          "name": "START",
          "from_state": "COMMITTED",
          "to_state": "RUNNING"
        }
      ],
      "description": "The graph was committed."
    },
    "RUNNING": {
      "name": "RUNNING",
      "valid_transitions": [
        {
          "name": "STOP",
          "from_state": "RUNNING",
          "to_state": "STOPPED"
        }
      ],
      "description": "The pipeline is running."
    },
    "STOPPED": {
      "name": "STOPPED",
      "valid_transitions": [
        {
          "name": "RESET",
          "from_state": "STOPPED",
          "to_state": "INITIALIZED"
        },
        {
          "name": "RETREAT",
          "from_state": "STOPPED",
          "to_state": "COMMITTED"
        },
        {
          "name": "RESTART",
          "from_state": "STOPPED",
          "to_state": "RUNNING"
        },
        {
          "name": "COLLECT",
          "from_state": "STOPPED",
          "to_state": "COLLECTED"
        }
      ],
      "description": "The pipeline was stopped."
    },
    "COLLECTED": {
      "name": "COLLECTED",
      "valid_transitions": [
        {
          "name": "STOP",
          "from_state": "COLLECTED",
          "to_state": "STOPPED"
        },
        {
          "name": "SHUTDOWN",
          "from_state": "COLLECTED",
          "to_state": "SHUTDOWN"
        }
      ],
      "description": "The pipeline is collecting data."
    },
    "SHUTDOWN": {
      "name": "SHUTDOWN",
      "valid_transitions": [],
      "description": "The manager was shut down."
    }
  },
  "routes": {
    "/start": "START",
    "/stop": "STOP",
    "/reset": "RESET",
    "/collect": "COLLECT"
  },
  "initial_state": "INITIALIZED"
}
